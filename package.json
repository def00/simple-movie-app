{
  "name": "simple-movie-app",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "11.13.0"
  },
  "scripts": {
    "dev": "npx babel-node ./bin/www",
    "db:migrate": "npx knex migrate:latest",
    "db:seed": "npx knex seed:run",
    "test": "ENV=test npx knex migrate:latest && ENV=test npx knex seed:run && BABEL_ENV=test mocha --require @babel/register './src/**/*.spec.js*' --exit",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "./node_modules/.bin/babel -d ./build ./src -s --presets \"@babel/preset-env\" --plugins \"@babel/plugin-transform-runtime\"",
    "build": "npm run clean && npm run build-babel",
    "start": "node ./build/app.js"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.6.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "express": "~4.16.1",
    "express-validator": "^6.2.0",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "knex": "^0.19.4",
    "morgan": "~1.9.1",
    "mysql": "^2.17.1",
    "mysql2": "^1.7.0",
    "objection": "^1.6.11",
    "request-promise-native": "^1.0.7",
    "sqlite3": "^4.1.0"
  },
  "author": "Andrzej Kretowicz <andrzej@kofeinka.net>",
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/register": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.3",
    "sinon": "^7.5.0"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          [
            "@babel/plugin-transform-runtime",
            {
              "regenerator": true,
              "corejs": 2
            }
          ]
        ]
      },
      "developnent": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          [
            "@babel/plugin-transform-runtime",
            {
              "regenerator": true,
              "corejs": 2
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "@babel/preset-env"

        ],
        "plugins": [
          [
            "@babel/plugin-transform-runtime",
            {
              "regenerator": true,
              "corejs": 2
            }
          ]
        ]
      }
    },
    "presets": [
      "@babel/preset-env"
    ]
  }
}
